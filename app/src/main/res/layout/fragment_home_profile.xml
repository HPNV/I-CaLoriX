<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeProfileFragment"
    android:background="@drawable/half_grad_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:text="Profile"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15sp" />

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:text="user@gmail.com"
            android:textColor="@color/dark_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:text="22 january 2004"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:text="Man"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginHorizontal="24sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/rounded_image_bg"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Height"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/profile_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="165 cm"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Weight"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/profile_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="55 Kg"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/profile_wight_loss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/loss_weight"
                android:text="Weight Loss"
                android:textColor="@color/black"
                android:theme="@style/white_button"
                android:background="@drawable/rounded_image_bg"
                />
            <Space
                android:layout_width="10sp"
                android:layout_height="10sp" />
            <Button
                android:id="@+id/profile_maintain_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/maintain_weight"
                android:text="Maintain Weight"
                android:textColor="@color/black"
                android:theme="@style/white_button"
                android:background="@drawable/rounded_image_bg"/>
            <Space
                android:layout_width="10sp"
                android:layout_height="10sp" />
            <Button
                android:id="@+id/profile_weight_gain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:drawableTop="@drawable/gain_weight"
                android:text="Weight Gain"
                android:theme="@style/white_button"
                android:background="@drawable/rounded_image_bg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="24sp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:background="@drawable/rounded_image_bg"
            android:padding="10sp">
            <Button
                android:id="@+id/profile_editBtn"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:padding="0sp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:textAlignment="textStart"
                android:text="@string/my_account"
                android:textColor="@color/black"/>
            <Space
                android:layout_width="10sp"
                android:layout_height="10sp" />
            <Button
                android:id="@+id/profile_logout"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:padding="0sp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/baseline_logout_24"
                android:textAlignment="textStart"
                android:text="@string/log_out"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>