<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_image_bg"
    android:orientation="vertical"
    android:padding="20sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/modal_home_image_custom"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/meal_preview"
            android:background="@drawable/rounded_image_bg"
            android:layout_marginEnd="16dp"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:textAlignment="center">
            <TextView
                android:id="@+id/modal_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mashed Potato"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/header_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100 Kg/Serving"
                android:textColor="@color/dark_grey"
                android:textAppearance="?attr/textAppearanceSubtitle2" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/modal_home_closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/close_symbol"
            android:background="?android:attr/selectableItemBackground" />
    </LinearLayout>

    <EditText
        android:id="@+id/modal_home_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="numberDecimal"
        android:layout_marginVertical="20sp"
        android:padding="10sp"
        android:paddingStart="20sp"
        android:hint="@string/serving_s"
        android:textColorHint="@color/dark_grey"
        android:textColor="@color/black"
        android:background="@drawable/edit_text_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--LEFT-->
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5sp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/grey_container"
                android:layout_marginBottom="10sp"
                android:padding="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="Calories"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/modal_home_calories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="700.2 Kcal"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/grey_container"
                android:padding="10sp"
                android:layout_marginBottom="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Proteins"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/modal_home_Protein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="700.2 Kcal"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <Button
                android:id="@+id/modal_home_remove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:padding="10sp"
                android:text="@string/remove"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!--RIGHT-->
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5sp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/grey_container"
                android:padding="10sp"
                android:layout_marginBottom="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="Carbs"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/modal_home_Carb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="700.2 Kcal"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/grey_container"
                android:layout_marginBottom="10sp"
                android:padding="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="Fats"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/modal_home_Fat"
                    android:layout_width="match_parent"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_height="wrap_content"
                    android:text="700.2 Kcal"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <Button
                android:id="@+id/modal_home_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:padding="0sp"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:backgroundTint="@color/dark_green"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
