<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/meal_home_cv"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/meal_home_image"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/meal_preview" />

            <LinearLayout
                android:layout_width="180sp"
                android:layout_height="match_parent"
                android:padding="5sp"
                android:layout_marginStart="10sp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/meal_home_foodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="0sp"
                    android:textColor="@color/black"
                    android:text="foodname"/>
                <TextView
                    android:id="@+id/meal_home_foodKal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="0sp"
                    android:textColor="@color/dark_grey"
                    android:text="foodkal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="match_parent"
                android:padding="5sp"
                android:layout_marginStart="10sp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/meal_hom_totalFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:padding="0sp"
                    android:textColor="@color/black"
                    android:text="foodcal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="0sp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:text="Calories"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>